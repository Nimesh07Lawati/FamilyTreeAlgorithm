<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FamilyTree.View.DAtaPageView"
            >

    <VerticalStackLayout Padding="20" Spacing="10">

        <Label 
            Text="This is your database. All tables are shown below."
            FontSize="18"
            FontAttributes="Bold"
            HorizontalOptions="Center" />

        <CollectionView ItemsSource="{Binding Database}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5" BackgroundColor="#F5F5F5" CornerRadius="10">
                        <VerticalStackLayout>
                            <Label Text="{Binding Id}" FontAttributes="Bold" />
                            <Label Text="{Binding Name}" />
                            <Label Text="{Binding Description}" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button Text="Go Back" Command="{Binding GoBackCommand}"/>
    </VerticalStackLayout>

</ContentPage>
